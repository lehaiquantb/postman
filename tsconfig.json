{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "chrome",
            "node",
            "jest",
            "chai",
            "events"
        ],
        "lib": [
            "ESNext",
            "DOM",
        ],
    },
    // "include": [
    //     "src/**/*.ts",
    //     "src/system.js",
    //     "src/system.js",
    // ],
    "exclude": [
        "node_modules"
    ]
}